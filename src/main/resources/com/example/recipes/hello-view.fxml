<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      stylesheets="@menu.css"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.recipes.SceneController"
      alignment="CENTER"
      spacing="40"
      prefWidth="1300"
      prefHeight="800"
      style="-fx-background-image: url('/com/example/recipes/images/kitchen.jpg');
             -fx-background-size: cover;">

    <!-- Title -->
    <children>
        <Label text="My Cookbook" textFill="white">
            <font>
                <Font name="Playfair Display" size="60" />
            </font>
        </Label>

        <!-- Main Buttons -->
        <Button text="My Recipe"
                onAction="#switchToMyRcp"
                styleClass="menu-btn" />

        <Button text="Find A Recipe"
                onAction="#switchToFindRcp"
                styleClass="menu-btn" />

        <Button text="Share a Recipe"
                onAction="#switchToShareRcp"
                styleClass="menu-btn" />

        <Button text="Nutrient Calculator"
                onAction="#switchToNutrient"
                styleClass="menu-btn" />
    </children>
</VBox>