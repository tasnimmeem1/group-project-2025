<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.group.project.LoginController"
           prefWidth="1280.0" prefHeight="720.0"
           style="-fx-background-image: url('/images/background.jpg');
                  -fx-background-size: cover;
                  -fx-background-position: center center;">

    <children>
        <!-- Wrapper to prevent stretching -->
        <HBox alignment="CENTER" fillHeight="false">
            <children>
                <!-- Compact white card -->
                <VBox alignment="CENTER"
                      spacing="6"
                      prefWidth="420"
                      maxWidth="420"
                      style="-fx-background-color: rgba(255,255,255,0.96);
                             -fx-background-radius: 20;">
                    <padding>
                        <Insets top="10" right="22" bottom="10" left="50"/>
                    </padding>

                    <!-- App title -->
                    <Label text="CookBook"
                           style="-fx-font-size: 30px;
                                  -fx-font-family: 'Brush Script MT';
                                  -fx-text-fill: #333333;"/>

                    <!-- Username -->
                    <VBox spacing="3" prefWidth="350">
                        <Label text="Username or Email"
                               style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                        <TextField fx:id="emailField"
                                   promptText="Enter your username or email"
                                   prefWidth="350" prefHeight="32"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
                    </VBox>

                    <!-- Password -->
                    <VBox spacing="3" prefWidth="350">
                        <Label text="Password"
                               style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Enter your password"
                                       prefWidth="350" prefHeight="32"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
                    </VBox>

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button text="LOG IN"
                                onAction="#handleLogin"
                                prefWidth="160" prefHeight="34"
                                style="-fx-background-color: #2E8BDA;
                                       -fx-background-radius: 8;
                                       -fx-text-fill: white;
                                       -fx-font-size: 16px;
                                       -fx-font-weight: bold;"/>

                        <Button text="SIGN UP"
                                onAction="#openSignup"
                                prefWidth="120" prefHeight="34"
                                style="-fx-background-color: transparent;
                                       -fx-border-color: #2E8BDA;
                                       -fx-border-radius: 8;
                                       -fx-text-fill: #2E8BDA;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;"/>
                    </HBox>

                    <!-- Error message -->
                    <Label fx:id="errorLabel"
                           prefHeight="16"
                           style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                </VBox>
            </children>
        </HBox>
    </children>
</StackPane>
