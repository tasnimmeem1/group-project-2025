<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0"
            prefWidth="1100.0"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group.project.MyRecipesController">

    <children>
        <VBox fillWidth="true"
              spacing="20"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.topAnchor="20.0">

            <!-- Title -->
            <Label text="My Recipe"
                   style="-fx-font-family: 'Times New Roman';
                          -fx-font-size: 40px;
                          -fx-text-fill: #27c4cf;" />

            <!-- Main content: 3 columns -->
            <HBox spacing="20">

                <!-- Left: filters + buttons -->
                <VBox prefWidth="280"
                      spacing="15"
                      style="-fx-background-color: white;
                             -fx-background-radius: 8;
                             -fx-font-family: 'Times New Roman';">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>
                        <!-- Filter labels + dropdowns -->

                        <Label text="Cuisine:" />
                        <ChoiceBox fx:id="myCuisineChoicebox"
                                   prefWidth="200" />

                        <Label text="Protein:" />
                        <ChoiceBox fx:id="myProteinChoicebox"
                                   prefWidth="200" />

                        <Label text="Cooking Time:" />
                        <ChoiceBox fx:id="myLengthChoicebox"
                                   prefWidth="200" />

                        <Label text="Difficulty:" />
                        <ChoiceBox fx:id="myDiffChoicebox"
                                   prefWidth="200" />

                        <!-- Spacer -->
                        <Region prefHeight="40" VBox.vgrow="ALWAYS" />

                        <!-- Buttons -->
                        <Button onAction="#showMyRecipes"
                                prefHeight="50"
                                prefWidth="220"
                                style="-fx-font-family: 'Times New Roman';
                                       -fx-font-size: 16px;
                                       -fx-background-color: #eaeaea;
                                       -fx-background-radius: 4;"
                                text="Enter" />

                        <Button onAction="#goBackHome"
                                prefHeight="50"
                                prefWidth="220"
                                style="-fx-font-family: 'Times New Roman';
                                       -fx-font-size: 16px;
                                       -fx-background-color: #eaeaea;
                                       -fx-background-radius: 4;"
                                text="Back to Home" />
                    </children>
                </VBox>

                <!-- Middle: recipes list -->
                <VBox spacing="10"
                      style="-fx-background-color: white;
                             -fx-background-radius: 8;
                             -fx-font-family: 'Times New Roman';">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>
                        <Label text="Recipes:"
                               style="-fx-font-size: 22px;
                                      -fx-font-weight: bold;" />

                        <ListView fx:id="recipeList"
                                  prefHeight="500"
                                  prefWidth="400" />
                    </children>
                </VBox>

                <!-- Right: recipe details + grocery button -->
                <VBox prefWidth="380"
                      spacing="10"
                      style="-fx-background-color: white;
                             -fx-background-radius: 8;
                             -fx-font-family: 'Times New Roman';">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>
                        <Label text="Recipe Details:"
                               style="-fx-font-size: 22px;
                                      -fx-font-weight: bold;" />

                        <TextArea fx:id="recipeDetails"
                                  prefHeight="450"
                                  prefWidth="340"
                                  wrapText="true" />

                        <Button onAction="#openGroceryForSelected"
                                prefHeight="40"
                                prefWidth="260"
                                style="-fx-font-family: 'Times New Roman';
                                       -fx-font-size: 14;
                                       -fx-background-color: #eaeaea;
                                       -fx-background-radius: 4;"
                                text="Grocery list for this recipe" />
                    </children>
                </VBox>

            </HBox>
        </VBox>
    </children>
</AnchorPane>
