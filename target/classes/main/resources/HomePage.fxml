<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group.project.HomePageController">

    <children>

        <!-- Full background image -->
        <ImageView fitHeight="720.0" fitWidth="1280.0" preserveRatio="false">
            <image>
                <!-- change name if your image is different -->
                <Image url="@images/home.jpg" />
            </image>
        </ImageView>

        <!-- Title + 4 separate buttons, no background panel -->
        <VBox alignment="CENTER" spacing="35">
            <padding>
                <Insets bottom="50" left="0" right="0" top="50" />
            </padding>
         <Label text="My Cookbook">
            <font>
               <Font name="Times New Roman Bold" size="39.0" />
            </font>
         </Label>

            <!-- (If you want the title like in drawing, you can comment this out) -->
            <!--
            <Label text="My Cookbook"
                   style="-fx-font-family: 'Times New Roman';
                          -fx-font-size: 32px;
                          -fx-text-fill: white;
                          -fx-font-weight: bold;" />
            -->

            <!-- Each of these is a separate “tab” bar -->
            <Button onAction="#openMyRecipes" prefHeight="90" prefWidth="700" style="-fx-font-family: 'Times New Roman';             -fx-font-size: 30px;             -fx-background-color: rgba(235,235,235,0.95);             -fx-background-radius: 0;             -fx-border-color: transparent;             -fx-text-fill: black;" text="My Recipe" />

            <Button onAction="#openSaveRecipe" prefHeight="90" prefWidth="700" style="-fx-font-family:                     'Times New Roman';                     -fx-font-size: 30px;                     -fx-background-color: rgba(235,235,235,0.95);                     -fx-background-radius: 0;                     -fx-border-color: transparent;                     -fx-text-fill: black;" text="Save a recipe" />

            <Button onAction="#openShareRecipe" prefHeight="90" prefWidth="700" style="-fx-font-family: 'Times New Roman';
                                -fx-font-size: 30px;
                                -fx-background-color: rgba(235,235,235,0.95);
                                -fx-background-radius: 0;
                                -fx-border-color: transparent;
                                -fx-text-fill: black;"
                    text="Grocery List" />

            <Button onAction="#openCalorieCalculator" prefHeight="90" prefWidth="700" style="-fx-font-family: 'Times New Roman';                     -fx-font-size: 30px;                     -fx-background-color: rgba(235,235,235,0.95);                      -fx-background-radius: 0;                      -fx-border-color: transparent;                      -fx-text-fill: black;" text="Nutrient calculator" />

        </VBox>

    </children>
</StackPane>
